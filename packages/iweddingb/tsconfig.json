{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "ESNext"],
    "module": "ESNext",
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "moduleResolution": "node",
    "paths": {
      "@components/*": ["components/*"],
      "@styles/*": ["styles/*"],
      "@common/*": ["common/*"],
      "@hooks/*": ["hooks/*"],
      "@store/*": ["store/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "../shared/src/utils/fncheck.ts"],
  "exclude": ["node_modules"]
}
